{
  "name": "shevyjs",
  "version": "0.0.0-development",
  "description": "Shevyjs is a CSS-in-JS solution for perfect vertical rhythm with your typography",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "repository": "git@github.com:kyleshevlin/shevyjs.git",
  "author": "Kyle Shevlin <kyle.a.shevlin@gmail.com> (http://kyleshevlin.com/)",
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "scripts": {
    "precommit": "npm run validate",
    "commit": "git-cz",
    "commitmsg": "validate-commit-msg",
    "prebuild": "rimraf dist",
    "build": "npm-run-all --parallel build:*",
    "build:main": "babel --out-dir dist src",
    "build:umd": "webpack --output-filename index.umd.js",
    "build:umd.min": "webpack -p --output-filename index.umd.min.js",
    "lint": "eslint ./src",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "validate": "npm-run-all --parallel lint test build",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-jest": "^20.0.1",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "codecov": "^2.2.0",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.13.3",
    "jest": "^19.0.2",
    "npm-run-all": "^4.0.2",
    "rimraf": "^2.6.1",
    "semantic-release": "^6.3.6",
    "validate-commit-msg": "^2.12.1",
    "webpack": "^2.5.1"
  }
}
