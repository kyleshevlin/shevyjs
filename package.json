{
  "name": "shevyjs",
  "version": "0.0.0-development",
  "description": "Shevyjs is a CSS-in-JS solution for perfect vertical rhythm with your typography",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "repository": "git@github.com:kyleshevlin/shevyjs.git",
  "author": "Kyle Shevlin <kyle.a.shevlin@gmail.com> (http://kyleshevlin.com/)",
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "scripts": {
    "commit": "git-cz",
    "prebuild": "rimraf dist",
    "build": "npm-run-all --parallel build:*",
    "build:main": "babel src --out-dir dist",
    "build:umd": "webpack --output-filename index.umd.js",
    "build:umd.min": "webpack -p --output-filename index.umd.min.js",
    "lint": "eslint ./src ./__tests__",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "validate": "npm-run-all --parallel lint test build",
    "semantic-release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run validate",
      "commit-msg": "validate-commit-msg"
    }
  },
  "release": {
    "branches": [
      "master"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "@babel/register": "^7.7.7",
    "babel-jest": "^26.3.0",
    "babel-loader": "^8.0.6",
    "codecov": "^3.6.1",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^7.9.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jest": "^24.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^4.3.0",
    "jest": "^27.0.1",
    "npm-run-all": "^4.0.2",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.1.1",
    "validate-commit-msg": "^2.12.1",
    "webpack": "^4.41.4",
    "webpack-cli": "^3.3.10"
  }
}
